pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/rahul003-hub/jenkins.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("myapp:latest")
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    docker.image("myapp:latest").run("-p 5000:5000")
                }
            }
        }
    }
}
